rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Products collection - anyone can read, only authenticated users can write (admin)
    match /products/{productId} {
      allow read: if true;  // Anyone can browse products
      allow write: if request.auth != null;  // Only logged-in users (admins) can modify
    }
    
    // Cart is stored locally in React Native (not in Firestore)
    // So no cart rules needed here
    
    // Orders collection - only authenticated users can create and read their own orders
    match /orders/{orderId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if false;  // Orders cannot be modified or deleted
    }
    
    // Users collection - users can read/write their own profile only
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
